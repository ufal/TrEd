<?xml version="1.0"?>
<rewrite>
  <!--

   Map used to resolve rewrite:name#id to real URLs

   - name: symbolic name of the document
   - search: set of html pages to search #id anchors in
   - main: main page (if rewrite: used without #id)
   - base-dir: used if search files are not yet in the destination dir

  -->

  <map base-dir=".">

    <!-- tred -->
    <url name="pml-markup"
         search="http://ufal.mff.cuni.cz/pdt2.0/doc/data-formats/pml-markup/index.html"
         main="http://ufal.mff.cuni.cz/pdt2.0/doc/data-formats/pml-markup/index.html">PDT 2.0 PML Markup Reference</url>

    <url name="tred" main="index.html" search="index.html">The Tree Editor TrEd</url>
    <url name="tred_manual" 
         search="{ar01*,tred}.html" main="ar01-toc.html">TrEd User's Manual</url>
    <url name="btred_manual" search="btred.html">btred manual page</url>
    <url name="btred_tutorial" search="bn-tutorial.html">btred tutorial</url> <!-- use bn_tutorial -->
    <url name="bn_tutorial" search="bn-tutorial.html">btred tutorial</url>
    <url name="PML.mak" search="PML_mak.html">documentation of PML.mak</url>
  </map>
</rewrite>
